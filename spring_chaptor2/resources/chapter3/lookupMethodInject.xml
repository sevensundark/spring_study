<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="prototypePrinter" class="chapter3.bean.Printer" scope="prototype" />
	<bean id="singletonPrinter" class="chapter3.bean.Printer" scope="singleton" />
	<bean id="helloApi1" class="chapter3.HelloImpl5" scope="singleton">
		<property name="printer" ref="prototypePrinter" />
		<lookup-method name="createPrototypePrinter" bean="prototypePrinter" />
		<lookup-method name="createSingletonPrinter" bean="singletonPrinter" />
	</bean>
	<bean id="helloApi2" class="chapter3.HelloImpl5" scope="prototype">
		<property name="printer" ref="prototypePrinter" />
		<lookup-method name="createPrototypePrinter" bean="prototypePrinter" />
		<lookup-method name="createSingletonPrinter" bean="singletonPrinter" />  
	</bean>      

</beans>  